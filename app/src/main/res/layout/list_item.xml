<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_artcle"
            android:layout_width="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />
        <ImageView
            android:id="@+id/iv_watermark"
            android:layout_width="wrap_content"
            android:src="@mipmap/liked_watermark"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_alignBottom="@+id/iv_artcle"
            android:layout_height="wrap_content"

            />

    </RelativeLayout>





    <TextView
        android:id="@+id/vT_tittle"
        android:layout_toEndOf="@id/rl_main_layout"
        android:textSize="22sp"
        android:textColor="#000"
        android:layout_marginStart="2dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rl_main_layout"
        android:layout_marginLeft="2dp" />


</RelativeLayout>
